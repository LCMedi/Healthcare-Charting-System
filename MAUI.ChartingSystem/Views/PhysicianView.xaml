<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.ChartingSystem.Views.PhysicianView"
             x:Name="Root"
             Title="PhysicianView"
             NavigatedTo="ContentPage_NavigatedTo">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Name"/>
            <Entry Placeholder="Dr. Smith" Text="{Binding Name}"/>

            <Label Text="License Number"/>
            <Entry Placeholder="ABC-12345" Text="{Binding LicenseNumber}"/>

            <Label Text="Graduation Date"/>
            <DatePicker Date="{Binding GraduationDate}"/>

            <Label Text="Specializations"/>
            <HorizontalStackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Entry Placeholder="'Cardiology'" Text="{Binding NewSpec}" Grid.Column="0"/>
                    <Button Text="Add Spec" Command="{Binding AddSpecCommand}" Grid.Column="1"/>
                </Grid>
            </HorizontalStackLayout>
            


            <Button Text="Ok" Clicked="OkClicked"/>
            <Button Text="Cancel" Clicked="CancelClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>